# 환경 설정
ENVIRONMENT=development

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restaurant_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_POOL_SIZE=20

# Supabase 설정 (대안)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_KEY=your_service_key

# 외부 API 키
KAKAO_REST_API_KEY=your_kakao_api_key
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# 크롤링 설정
CRAWLER_RATE_LIMIT=0.5
CRAWLER_TIMEOUT=30
CRAWLER_RETRY=3
USER_AGENT=RestaurantBot/1.0

# 캐시 설정
CACHE_ENABLED=true
CACHE_STRATEGY=file
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Redis 설정 (선택적)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json

# 키토 점수화 설정
KETO_RULE_VERSION=v1.0
KETO_CONFIDENCE_THRESHOLD=0.5
KETO_REVIEW_THRESHOLD=0.4